# Configuracao Netlify - Copie para a raiz do projeto como netlify.toml

[build]
  # Comando para buildar o frontend
  command = "cd client && npm run build"
  
  # Pasta onde o build sera gerado
  publish = "client/dist"

# Redireciona todas as rotas para index.html (necessario para SPA)
[[redirects]]
  from = "/*"
  to = "/index.html"
  status = 200

# Configuracoes de headers (opcional - melhora performance)
[[headers]]
  for = "/*"
  [headers.values]
    X-Frame-Options = "DENY"
    X-XSS-Protection = "1; mode=block"
    X-Content-Type-Options = "nosniff"

# Cache para assets estaticos (opcional)
[[headers]]
  for = "/assets/*"
  [headers.values]
    Cache-Control = "public, max-age=31536000, immutable"
